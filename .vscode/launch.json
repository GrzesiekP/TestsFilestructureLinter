{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug CLI Test",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      "args": [
        "--config",
        "${workspaceFolder}/jest.config.js",
        "--testMatch",
        "**/tests/**/*.test.ts",
        "--runInBand",
        "tests/cli.test.ts"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug CLI Command",
      "runtimeArgs": ["-r", "ts-node/register"],
      "args": [
        "${workspaceFolder}/src/index.ts",
        "--src-root", "${workspaceFolder}/test-data/src",
        "--test-root", "${workspaceFolder}/test-data/tests",
        "--dir",
        "--name"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
  ]
} 