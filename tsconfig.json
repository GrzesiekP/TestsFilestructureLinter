{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "composite": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@test-filestructure-linter/shared": ["./shared/src"]
    }
  },
  "references": [
    { "path": "./shared" }
  ],
  "include": ["src/**/*"]
} 