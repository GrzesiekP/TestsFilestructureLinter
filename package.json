{
  "name": "test-filestructure-linter-cli",
  "version": "1.0.3",
  "description": "CLI tool for test filetructure linting",
  "author": {
    "name": "Grzegorz PawÅ‚owski",
    "email": "kontakt@grzegorzpawlowski.pl"
  },
  "main": "dist/index.js",
  "bin": {
    "test-filestructure-linter": "dist/index.js"
  },
  "scripts": {
    "build": "rimraf dist && tsc --project tsconfig.json",
    "clean": "rimraf dist",
    "dev": "ts-node src/index.ts",
    "test": "npm run build && jest --no-coverage",
    "test:watch": "npm run build && jest --watch --no-coverage",
    "test:debug": "npm run build && node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --no-coverage tests/cli.test.ts",
    "test:cli": "npm run build && jest tests/cli.test.ts --verbose --no-coverage",
    "test:cli:debug": "npm run build && node --inspect-brk -r ts-node/register ./node_modules/jest/bin/jest.js --runInBand --no-coverage tests/cli.test.ts",
    "test:coverage": "npm run build && jest --coverage",
    "test:github": "npm run build && npm test",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "cli-progress": "^3.12.0",
    "commander": "^11.1.0",
    "enquirer": "^2.4.1",
    "figlet": "^1.7.0",
    "glob": "^7.2.3",
    "rimraf": "^5.0.5"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.5",
    "@types/figlet": "^1.5.8",
    "@types/glob": "^9.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "prettier": "^3.5.2",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [],
  "license": "GPL-3.0",
  "publishConfig": {
    "access": "public"
  }
}
